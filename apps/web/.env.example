# Example .env file for setup

# Convex backend URLs (choose one)
NEXT_PUBLIC_CONVEX_URL=https://your-convex-instance.convex.cloud
# NEXT_PUBLIC_CONVEX_URL=https://your-convex-instance.convex.dev

# Clerk authentication (replace with your test keys)
NEXT_PUBLIC_CLERK_FRONTEND_API_URL=https://your-app.clerk.accounts.dev
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_example_publishable_key
CLERK_SECRET_KEY=sk_test_example_secret_key

# Clerk authentication URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/

# Sentry (replace with your test token and DSN)
SENTRY_AUTH_TOKEN=sntrys_example_auth_token
SENTRY_DSN_KEY=https://examplePublicKey@o0.ingest.sentry.io/0

# Example delivery source
NEXT_PUBLIC_DELIVERY_SOURCE=http://localhost:3001/widget.js